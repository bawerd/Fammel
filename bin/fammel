#!/usr/bin/php
<?php

include dirname(__FILE__) . "/../fammel.php";

try
{
  $input = file_get_contents($argv[1]);
  
  $fammel = new Fammel();
  $fammel->parse($input);
  
  echo "HAML:\n\n$input\n\n\nRESULT:\n\n";
  echo $fammel->render();
} 
catch(parse_error $e)
{
  echo $e->getMessage(), "\n";
}
?>
